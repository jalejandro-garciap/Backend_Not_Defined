generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  first_name    String
  last_name     String
  email         String       @unique
  username      String
  profile_img   String
  phone         String
  role          String
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
  last_login    DateTime      @default(now())
  social_medias SocialMedia[]

  managerOnSponsors ManagerOnSponsor[]
  streamerOnSponsors StreamerOnSponsor[]
}

model SocialMedia {
  id                String   @id @default(cuid())
  user_id           String
  social_media_name String
  access_token      String
  refresh_token     String
  last_connection   DateTime @default(now())
  enabled           Boolean  @default(true)
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id])
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @default("{}")
  expiresAt DateTime
}

model Sponsor {
  id          String   @id @default(cuid())
  managers  ManagerOnSponsor[]
  streamers StreamerOnSponsor[]
  expiration_date DateTime
  created_at  DateTime @default(now())
  active      Boolean  @default(true)
}

model ManagerOnSponsor {
  userId    String
  sponsorId String
  since     DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  sponsor   Sponsor  @relation(fields: [sponsorId], references: [id])

  @@id([userId, sponsorId])
}

model StreamerOnSponsor {
  userId    String
  sponsorId String
  since     DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  sponsor   Sponsor  @relation(fields: [sponsorId], references: [id])

  @@id([userId, sponsorId])
}